#include<stdio.h>
#include<stdlib.h>
void union1(int arr1[],int arr2[],int n1,int n2){
    int array1[n1+n2],array2[n1+n2],i=0,j=0,count=0,count1=0;
    while(i<n1 && j<n2){
        if(arr1[i]>arr2[j]){                                    //compare arr1[i] and arr2[j] and increment accordingly
            array1[count++]=arr2[j];                        //take the elements of both arrays in sorted manner
            j++;}                                               // i is pointer for arr1 and j for arr2
        else{
            array1[count++]=arr1[i];    
            i++;                                    
        }}
    if(i>j){                                                            //append the remaining elements from the larger array
        while(j<n2){
            array1[count++]=arr2[j++];
        }}
    else{
        while(i<n1){
            array1[count++]=arr1[i++];
        }}
    for(i=0;i<n1+n2;i++){                                                 //remove duplicates                              
        if(array1[i]!=array1[i+1])                                                              
            array2[count1++]=array1[i];
        else{
            array2[count1++]=array1[i];
            while(array1[i]==array1[i+1])
                i++;
        }}
    for(i=0;i<count1;i++)
        printf(" %d ",array2[i]);                                                                   //print union
}
void intersection1(int arr1[],int arr2[],int n1,int n2){
    int array1[n1+n2],array2[n1+n2],i,j,count=0,count1=0;
    for(i=0;i<n1;i++){
        for(j=0;j<n2;j++){
            if(arr1[i]==arr2[j])
                array1[count++]=arr1[i];
                }
    }
    
    for(i=0;i<count;i++){
        if(array1[i]!=array1[i+1])
            array2[count1++]=array1[i];
        else{
            array2[count1++]=array1[i];
            while(array1[i]==array1[i+1])
                i++;
        }}
    if(count1!=0)
    for(i=0;i<count1;i++)
        printf(" %d ",array2[i]);
    else
        printf("\nIntersection is Null\n");
    
}
int main(){
    int arr1[10],arr2[10],n1,n2,i;
    printf("\nEnter size of first array:\n");
    scanf("%d",&n1);
    printf("\nEnter elements of first array:\n");
    for(i=0;i<n1;i++){
        scanf("%d",&arr1[i]);
    }
    printf("\nEnter size of second array:\n");
    scanf("%d",&n2);
    printf("\nEnter elements of second array:\n");
    for(i=0;i<n2;i++)
        scanf("%d",&arr2[i]);
   union1(arr1,arr2,n1,n2);
   printf("\n");
   intersection1(arr1,arr2,n1,n2);
}
