#include<stdio.h>
#include<stdlib.h>
#define MAX 10
void heapify(int arr[],int n){
    int k,v,i,j,flag;
    for(i=n/2;i>=1;i--){
        k=i;
        v=arr[k];
        flag=0;
        while(flag==0 && 2*k<=n){
              j=2*k;
            if(j<n){
                    if(arr[j]<arr[j+1])
                        j=j+1;
                }
            if(v>=arr[j])
                flag=1;
            else{
                arr[k]=arr[j];
                k=j;
            }
            }
            arr[k]=v;
        }
    }
void arrsort(int arr[],int n){
    int temp;
    for(int i=1;i<n;i++){
        if(arr[i]<arr[i+1]){
            temp=arr[i];
            arr[i]=arr[i+1];
            arr[i+1]=temp;
        }
        
    }
}
int kthmax(int arr[],int n,int k){
    int i,count=1;
    if(n==1)
        return arr[1];
    else if(k==1)
        return arr[1];
    else{
    arrsort(arr,n);
    for(int i=1;i<n;i++){
        if(arr[i]!=arr[i+1])
        count++;
        if(count==k)
            return arr[i+1];
    }}
}
int kthmin(int arr[],int n,int k){
    int i,count=1;
    if(n==1)
        return arr[n];
    else if(k==1)
        return arr[n];
    else{
    arrsort(arr,n);
    for(int i=n;i>1;i--){
        if(arr[i]!=arr[i-1])
        count++;
        if(count==k)
            return arr[i-1];
    }}
}
int main(){
    int n,arr[MAX],k,temp;
    printf("\nEnter number of elements:\n");
    scanf("%d",&n);
    
    for(int i=1;i<=n;i++){
        printf("\nEnter element:\n");
        scanf("%d",&arr[i]);
    }
    heapify(arr,n);
     for(int i=1;i<=n;i++){
        printf(" %d ",arr[i]);
    }
    printf("\nEnter the value of k:\n");
    scanf("%d",&k);
    printf("\nThe kth max is %d and min is %d\n",kthmax(arr,n,k),kthmin(arr,n,k));
    
    
}
