#include<stdio.h>
#include<stdlib.h>
int kthmax(int arr[],int n,int k){
    int i,max1,min1,a1,m1,j;
    min1=arr[0];
    for(i=0;i<n;i++){
        if(arr[i]<min1)
            min1=arr[i];
    }
     
    for(j=1;j<k;j++){
        a1=arr[0];
        m1=0;
        for(i=0;i<n;i++){
            if(arr[i]>a1)
                a1=arr[i];
        }
        for(i=0;i<n;i++){
            if(arr[i]==a1){
                arr[i]=min1;
                }
    }
}
    max1=arr[0];
    for(i=0;i<n;i++){
        if(arr[i]>max1)
            max1=arr[i];
    }
    return max1;
        
}
int kthmin(int arr[],int n,int k){
      int i,max,min,a,m,j;
    max=arr[0];
    for(i=0;i<n;i++){
        if(arr[i]>max)
            max=arr[i];
    }
    for(j=1;j<k;j++){
        a=arr[0];
        m=0;
        for(i=0;i<n;i++){
            if(arr[i]<a)
                a=arr[i];
        }
        for(i=0;i<n;i++){
            if(arr[i]==a){
                arr[i]=max;
                }
        }
}
    min=arr[0];
    for(i=0;i<n;i++){
        if(arr[i]<min)
            min=arr[i];
    }
    return min;
}
int main(){
    int arr[100],arr2[100],arr3[100],n,k,i;
    printf("Enter number of elements:\n");
    scanf("%d",&n);
    printf("Enter Array elements:\n");
    for(i=0;i<n;i++){
        printf("\nEnter element:\n");
        scanf("%d",&arr[i]);
    }
    printf("\nEnter the value of k\n");
    scanf("%d",&k);
    for(i=0;i<n;i++){
        arr2[i]=arr[i];
        arr3[i]=arr[i];}
    printf("\nThe kth max is %d\n",kthmax(arr2,n,k));
    printf("\nThe kth min is %d\n",kthmin(arr3,n,k));
}



