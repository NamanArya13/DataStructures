#include<stdio.h>
#include<stdlib.h>
#define MAX 1000
void heapify(int arr[],int n){
    int k,v,i,j,flag;
    for(int i=n/2;i>=1;i--){
        k=i;
        v=arr[k];
        flag=0;
        while(!flag && 2*k<=n){
            j=2*k;
            if(j<n){
                if(arr[j]<arr[j+1])
                    j=j+1;
            }
            if(v>=arr[j])
                flag=1;
            else{
                arr[k]=arr[j];
                k=j;
                
            }
        }arr[k]=v;
    }
}
int main(){
    int n,arr[MAX],k,temp;
    printf("\nEnter number of elements:\n");
    scanf("%d",&n);
    
    for(int i=1;i<=n;i++){
        printf("\nEnter element:\n");
        scanf("%d",&arr[i]);
    }
    
    printf("\nEnter the value of k which should be less than %d\n",n);
    scanf("%d",&k);
    heapify(arr,n);
    
    printf("\nThe largest %d elements are:\n",k);
    for(int i=1;i<=k;i++){
        if(arr[i]<arr[i+1]){
            temp=arr[i];
            arr[i]=arr[i+1];
            arr[i+1]=temp;}
        printf(" %d ",arr[i]);
}}



