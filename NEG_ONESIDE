#include<stdio.h>
int *moveNeg(int arr[],int n){
    int countNeg=0,i,j,temp,count=0,count2=0;
    for(i=0;i<n;i++){
        if(arr[i]<0)
            countNeg++;
    }
    int arr1[countNeg-1];
    if(countNeg==0)
        return arr;
    for(i=0;i<n;i++)
        if(arr[i]<0)
            arr1[count++]=i;
    for(i=0;i<countNeg;i++){
        if(arr[i]<0){
            count2++;
            }
        else{
            temp=arr[i];
            arr[i]=arr[arr1[count2]];
            arr[arr1[count2]]=temp;
            count2++;
    }}
    return arr;
}
int main(){
    int arr[10],n;
    int *p;
    printf("\nEnter number of elements in array:\n");
    scanf("%d",&n);
    printf("\nEnter array elements:\n");
    for(int i=0;i<n;i++)
        scanf("%d",&arr[i]);
    p=moveNeg(arr,n);
    for(int i=0;i<n;i++)
        printf(" %d ",*(p+i));
}
