#include<stdio.h>
#include<stdlib.h>
int count=0;
struct node{
    int info;
    struct node *next;
};
struct node *head;
struct node *getnode(int ele){
    struct node *temp;
    temp=(struct node *)malloc(sizeof(struct node));
    temp->info=ele;
    temp->next=NULL;
    return temp;
}
void insertfront(int ele){
    count++;
    struct node *p;
    p=getnode(ele);
    if(head==NULL)
       head=p;
    else{
    p->next=head;
    head=p;}
}
void deletefront(){
    if(head==NULL)
       printf("\nLIST EMPTY\n");
    else{
        if(head->next==NULL){
            printf("\nDELETED %d\n",head->info);
            free(head);
            head=NULL;
            count--;
        }
    else{
        struct node *p;
        p=head;
        head=head->next;
        printf("\n DELETED %d\n",p->info);
        free(p);
        count--;
    }
    }
}
void display(){
       struct node *p;
    if(head==NULL)
        printf("\nEMPTY LIST\n");
    p=head;
    printf("\nLIST CONTENTS: ");
    while(p!=NULL){
        printf(" %d ",p->info);
        p=p->next;
    }
    printf("\n");
}
void insertend(int ele){
    count++;
    struct node *p;
    p=getnode(ele);
    if(head==NULL)
       head=p;
    else{
        struct node *q;
        q=head;
        while(q->next!=NULL)
             q=q->next;
        q->next=p;
        
    }
}

void deletedend(){
    struct node *p;
    if(head==NULL)
      printf("\n LIST IS EMPTY\n");
    else{
        if(head->next==NULL){
            printf("\n deleted %d\n",head->info);
            free(head);
            head=NULL;
            count--;
        }
        else{
            struct node *q;
            q=head;
            while(q->next->next!=NULL)
                q=q->next;
            p=q->next;
            q->next=NULL;
            printf("\n DELETED: %d\n",p->info);
            free(p);
            count--;
        }
    }
}
struct node *reverse (struct node *head, int k)
{ 
    if (!head)
        return NULL;
   
    struct node* current = head;
    struct node* temp = NULL;
    struct node* prev = NULL;
    int count = 0;
   
     
     
    while (current != NULL && count < k)
    {
        temp  = current->next;
        current->next = prev;
        prev = current;
        current = temp;
        count++;
    }
     
    if (temp !=  NULL)
       head->next = reverse(temp, k);
    return prev;
}

int main(){
    head=NULL;
    int ele,ch,k;
    while(1){
        printf("1.INSERTFRONT\t2.INSERTEND\t3.DELETEFRONT\t4.DELETEEND\t5.DISPLAY\t6.REVERSE\t7.PRINT COUNT\t8.EXIT\n");
        scanf("%d",&ch);
        switch(ch){
            case 1:printf("\nENTER ELEMENT TO ENTER FRONT:");
                   scanf("%d",&ele);
                   insertfront(ele);
                   break;
            case 2:printf("\nENTER ELEMENT TO ENTER END:");
                   scanf("%d",&ele);
                   insertend(ele);
                   break;
            case 3:deletefront();
                   break;
            case 4:deletedend();
                   break;
            case 5:display();
                   break;
            case 6:printf("\nEnter size of group:\n");
                   scanf("%d",&k);
                   printf("%d",count/k);
                   head=reverse(head,k);
                   break;
            case 7:printf("count=%d",count);
                   break;
            case 8:exit(0);
            default:return 0;
                    break;
        }
    }
}


