#include<stdio.h>
void sortarray(int arr[],int n){
    int count0=0,count1=0,count2=0,arr1[n],i,j,m,k,start,end,mid;
    for(i=0;i<n;i++){
        if(arr[i]==0)
            count0+=1;
        else if(arr[i]==1)
            count1+=1;
        else
            count2+=1;
    }
    start=0;
    end=n-1;
    mid=count0;
    for(int i=0;i<n;i++){
        if(arr[i]==0){
            arr1[start]=arr[i];
            start++;
        }
        else if(arr[i]==2){
            arr1[end]=arr[i];
            end--;
        }
        else{
            arr1[mid]=arr[i];
            mid++;
        }
            
    }
    for(int i=0;i<n;i++)
        arr[i]=arr1[i];
}
int main(){
    int n,arr[100];
    printf("\nEnter number of elements:\n");
    scanf("%d",&n);
    for(int i=0;i<n;i++){
        printf("\nEnter element:\n");
        scanf("%d",&arr[i]);
    }
    sortarray(arr,n);
    printf("\n\n");
    printf("Sorted Array:\n");
     for(int i=0;i<n;i++){
         printf(" %d ",arr[i]);
     }
}

