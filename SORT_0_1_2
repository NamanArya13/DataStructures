#include<stdio.h>
void sortarray(int arr[],int n){
    int count0=0,count1=0,count2=0,i,j,m,k;
    for(i=0;i<n;i++){
        if(arr[i]==0)
            count0+=1;
        else if(arr[i]==1)
            count1+=1;
        else
            count2+=1;
    }
    int arr1[count0],arr2[count1],arr3[count2],arr4[n];
    for(i=0,j=0;i<n;i++){
        if(arr[i]==0){
            arr1[j]=arr[i];
            j=j+1;
        }
    }
        
      for(i=0,j=0;i<n;i++){
        if(arr[i]==1){
            arr2[j]=arr[i];
            j=j+1;
        }}

      for(i=0,j=0;i<n;i++){
        if(arr[i]==2){
            arr3[j]=arr[i];
            j=j+1;
        }
}
m=count0;
k=count0+count1;
      for(i=0;i<count0;i++){
          arr4[i]=arr1[i];
      }
      for(i=0;i<count1;i++){
          arr4[m]=arr2[i];
          m++;
          
      }
      for(i=0;i<count2;i++){
          arr4[k++]=arr3[i];
      }

      for(i=0;i<n;i++){
          arr[i]=arr4[i];
      }
          
}

int main(){
    int n,arr[100];
    printf("\nEnter number of elements:\n");
    scanf("%d",&n);
    for(int i=0;i<n;i++){
        printf("\nEnter element:\n");
        scanf("%d",&arr[i]);
    }
    sortarray(arr,n);
    printf("\n\n");
    printf("Sorted Array:\n");
     for(int i=0;i<n;i++){
         printf(" %d ",arr[i]);
     }
}
