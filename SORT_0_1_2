#include<stdio.h>
void sortarray(int arr[],int n){
    int arr1[n],i,start=0,end=n-1,mid=0;
    for(i=0;i<n;i++)
        if(arr[i]==0)
            mid+=1;
    for(int i=0;i<n;i++){
        if(arr[i]==0){
            arr1[start++]=arr[i];
        }
        else if(arr[i]==2){
            arr1[end--]=arr[i];
        }
        else{
            arr1[mid++]=arr[i];
        }
    }
    for(int i=0;i<n;i++)
        arr[i]=arr1[i];
}
int main(){
    int n,arr[100];
    printf("\nEnter number of elements:\n");
    scanf("%d",&n);
    for(int i=0;i<n;i++){
        printf("\nEnter element:\n");
        scanf("%d",&arr[i]);
    }
    sortarray(arr,n);
    printf("\n\n");
    printf("Sorted Array:\n");
     for(int i=0;i<n;i++){
         printf(" %d ",arr[i]);
     }
}
